	 <% unless current_page?(donors_path) %>
   
    <div class="container page">
 
 	   <div class="row">
		   <div class="col-md-9">
			   <%= yield %>
 		   </div>
	
	<div class="col-md-3 rh">
		<%= yield :rh %>
	</div>
	
	</div>
<% else %>

    <div class="container page">
 
 <div class="row">
	 <div class="col-md-12">
 <%= yield %>
 	</div>
	
	
	
	
	
</div>

<% end %>

	
