</head>
<body>
  <div class="navbar navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to(image_tag("logo.png"),  root_path, :class => "navbar-brand") %>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav pull-right">
          <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path %></li>
          <li class="<%= 'active' if current_page?(vision_path) %>"> <%= link_to "Our Vision", vision_path %></li>
		  <li class="<%= 'active' if current_page?(support_path) %>"> <%= link_to "Support", support_path %></li>
		  <li class="<%= 'active' if current_page?(donors_path) %>"><%= link_to "Donors", donors_path %></li>
		  <li class="<%= 'active' if current_page?(news_index_path) or params[:controller] == 'news' %>"><%= link_to "News/Events", news_index_path %></li>
          <li class="<%= 'active' if current_page?(contact_path) %>"><%= link_to "Contact", contact_path, 'data-no-turbolink' => true %></li>
        </ul>
      </div><!-- /.nav-collapse -->
    </div><!-- /.container -->
  </div><!-- /.navbar -->

 
	 <div class="container">
		<div class="notices">
		<% if notice %>
		<h2 class="alert alert-success"><%= notice %></h2>
		<% end %>
		<% if alert %>
		<h2 class="alert alert-danger"><%= alert %></h2>
		<% end %>
		</div>
		</div>
	  </div>
        
		
		


		                    
					
						
