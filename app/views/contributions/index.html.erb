<p id="notice"><%= notice %></p>

<h1>Listing Contributions</h1>

<table class="table table-hover">
  <thead>
    <tr>
		<th>Lastname</th>
      <th>Firstname</th>
      
      <th>Organization</th>
      <th>Contribution</th>
      <th>Contribution level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @contributions.each do |contribution| %>
      <tr>
		  <td><%= contribution.lastname %></td>
        <td><%= contribution.firstname %></td>
        
        <td><%= contribution.organization %></td>
        <td><%= contribution.contribution %></td>
        <td><%= contribution.admin_contribution_level.name %></td>
        <td><%= link_to 'Show', contribution %></td>
        <td><%= link_to 'Edit', edit_contribution_path(contribution) %></td>
        <td><%= link_to 'Destroy', contribution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

