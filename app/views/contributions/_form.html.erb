<div class="col-md-12"><%= bootstrap_form_for(@contribution, :html => { :multipart => true }) do |f| %>
  <% if @contribution.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

      <ul>
      <% @contribution.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
   
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    
    <%= f.text_field :organization %>
  </div>
  
  <div class="field">
  <%= f.file_field :avatar %>
</div>


  <div class="field">
   
    <%= f.number_field :contribution %>
  </div>
  <div class="field">
    
    <%= f.collection_select :admin_contribution_level_id, Admin::ContributionLevel.all, :id, :name, :prompt => "Select" %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary pull-right' %>
  </div>
<% end %>
</div>